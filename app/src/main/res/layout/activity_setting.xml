<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dengdeng.mobilesafe.activity.SettingActivity">
    <TextView
        android:text="设置中心"
       style="@style/MyTitleStyle" />

    <com.example.dengdeng.mobilesafe.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.example.dengdeng.mobilesafe"
        android:id="@+id/setting_item_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle = "自动更新设置"
        mobilesafe:deson = "自动更新设置yikaiqi"
        mobilesafe:desoff = "自动更新设置yiguanbi"
        >
    </com.example.dengdeng.mobilesafe.view.SettingItemView>
    <com.example.dengdeng.mobilesafe.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.example.dengdeng.mobilesafe"
        android:id="@+id/setting_item_phoneAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle = "电话归属地显示设置"
        mobilesafe:deson = "归属地显示已开启"
        mobilesafe:desoff = "归属地显示已关闭"
        >
    </com.example.dengdeng.mobilesafe.view.SettingItemView>
    <com.example.dengdeng.mobilesafe.view.SettingClickView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.example.dengdeng.mobilesafe"
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle = "设置归属地显示风格"
        mobilesafe:des = "透明"
        ></com.example.dengdeng.mobilesafe.view.SettingClickView>
    <com.example.dengdeng.mobilesafe.view.SettingClickView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.example.dengdeng.mobilesafe"
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle = "归属地提示框位置"
        mobilesafe:des = "设置归属地提示框位置"
        ></com.example.dengdeng.mobilesafe.view.SettingClickView>




</LinearLayout>
