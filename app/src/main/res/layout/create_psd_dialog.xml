<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:id = "@+id/tv_create_psd_dialog_title"
        android:text = "首次使用，请先创建密码"
        style = "@style/MyTitleStyle"/>
    <EditText android:id = "@+id/et_new_psd"
        android:maxLines="1"
        android:textColor="#000"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:hint = "请输入密码"
        android:inputType="textPassword"/>
    <EditText android:id = "@+id/et_confirm_psd"
        android:maxLines="1"
        android:textColor="#000"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:hint = "请确认密码"
        android:inputType="textPassword"/>
    <LinearLayout android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        >
        <Button android:id= "@+id/btn_create_psd"
            android:text = "创建密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
        <Button android:id= "@+id/btn_cancel"
            android:text = "取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
    </LinearLayout>

</LinearLayout>